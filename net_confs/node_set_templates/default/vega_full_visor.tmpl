[Admin]
  [Admin.Server]
    SocketPath = "/tmp/vega-{{.NodeNumber}}.sock"
    Enabled = true

[API]
	Port = {{add 300 .NodeNumber}}2
	[API.REST]
			Port = {{add 300 .NodeNumber}}3

[Blockchain]
	[Blockchain.Tendermint]
		RPCAddr = "tcp://127.0.0.1:266{{.NodeNumber}}7"
	[Blockchain.Null]
		Port = {{add 310 .NodeNumber}}1

[EvtForward]
	Level = "Info"
	RetryRate = "1s"

[Ethereum]
  RPCEndpoint = "{{.ETHEndpoint}}"

[Processor]
	[Processor.Ratelimit]
		Requests = 10000
		PerNBlocks = 1

[Snapshot]
	Level = "DEBUG"
	KeepRecent = 10
	RetryLimit = 5
	Storage = "GOLevelDB"
	DBPath = ""

[ProtocolUpgrade]
	Level = "DEBUG"