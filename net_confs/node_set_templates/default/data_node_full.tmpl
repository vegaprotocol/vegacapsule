GatewayEnabled = true

[SqlStore]
  Level = "Info"
  Enabled = true
  WipeOnStartup = true
  UseEmbedded = true
  [SQLStore.ConnectionConfig]
    Database = "vega"
    Host = "localhost"
    Password = "vega"
    Port = {{add 50 .NodeNumber}}32
    UseTransactions = true
    Username = "vega"

[API]
  Level = "Info"
  Port = {{add 300 .NodeNumber}}7
  CoreNodeGRPCPort = {{add 300 .NodeNumber}}2

[Pprof]
  Level = "Info"
  Enabled = true
  Port = {{add 60 .NodeNumber}}60
  ProfilesDir = "{{.NodeHomeDir}}"

[Gateway]
  Level = "Info"
  [Gateway.Node]
    Port = {{add 300 .NodeNumber}}7
  [Gateway.GraphQL]
    Port = {{add 300 .NodeNumber}}8
  [Gateway.REST]
    Port = {{add 300 .NodeNumber}}9

[Metrics]
  Level = "Info"
  Timeout = "5s"
  Port = {{add 210 .NodeNumber}}2
  Enabled = false
[Broker]
  Level = "Info"
  UseEventFile = false
  [Broker.SocketConfig]
    Port = {{add 300 .NodeNumber}}5

[NetworkHistory]
  Enabled = false